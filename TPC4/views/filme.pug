extends layout

block content
  style.
    .w3-card-4 {
      margin: 20px auto;
      max-width: 800px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }

    .w3-blue {
      background-color: #0073e6;
      color: white;
      padding: 16px;
      text-align: center;
    }

    .w3-container {
      padding: 20px;
    }

    .w3-ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .w3-ul li {
      padding: 8px 0;
      border-bottom: 1px solid #ddd;
    }

    .w3-ul li:last-child {
      border-bottom: none;
    }

    .w3-button {
      margin: 10px;
      padding: 8px 16px;
      font-size: 14px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .w3-button.w3-aqua {
      background-color: #00bcd4;
      color: white;
    }

    .w3-button.w3-aqua:hover {
      background-color: #0097a7;
    }

    .w3-round-xxlarge {
      border-radius: 24px;
    }

  .w3-card-4
    header.w3-container.w3-blue
      h1= filme.title
    .w3-container
      h2 Ano
      p= filme.year
      
      h2 Elenco
      ul.w3-ul
        each ator in filme.cast
          li
            a(href=`/filmes/ator/${ator}`)= ator
      
      h2 Géneros
      ul.w3-ul
        each g in filme.genres
          li= g

      a(href=`/filmes/edit/${filme.id}`).w3-button.w3-aqua.w3-round-xxlarge Editar
      a(href=`/filmes/delete/${filme.id}`).w3-button.w3-aqua.w3-round-xxlarge Eliminar
      a(href="/filmes").w3-button.w3-aqua.w3-round-xxlarge Voltar à Lista

    footer.w3-container.w3-blue
      address Generated by EW2025 class
