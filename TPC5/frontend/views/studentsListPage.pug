extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 Lista de Alunos
            // Add status message based on tipo
            if tipo == 1
                header.w3-container.w3-light-blue
                    h3 Aluno "#{aluno_id}" foi adicionado!

            if tipo == 2
                header.w3-container.w3-indigo
                    h3 Aluno "#{aluno_id}" foi editado!

            if tipo == 3
                header.w3-container.w3-red
                    h3 Aluno "#{aluno_id}" foi removido!

    .w3-container.w3-white
        .w3-container
            a.w3-btn.w3-ripple.w3-round.w3-teal(href="/alunos/registo") Adicionar Aluno

        table.w3-table-all
            tr
                th ID
                th Nome
                th GitHub
                th Ações
            each aluno in slist
                tr
                    td
                        a(href="/alunos/" + aluno.id)= aluno.id
                    td
                        a(href="/alunos/" + aluno.id)= aluno.nome
                    td
                        a(href=aluno.github)= aluno.github
                    td
                        span
                            a(href="/alunos/edit/" + aluno.id)
                                i.fa.fa-edit
                        span
                            a(href="/alunos/delete/" + aluno.id)
                                i.fa.fa-trash
