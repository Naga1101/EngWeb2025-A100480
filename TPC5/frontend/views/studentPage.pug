extends layout

block content
    .w3-card-4
        header.w3-container.w3-light-teal
            h1 Perfil do Aluno #{aluno.id}

        .w3-container
            a.w3-button.w3-gray(href="/alunos") Voltar
            a.w3-btn.w3-ripple.w3-round.w3-light-blue(href="/alunos/edit/"+aluno.id) Editar Aluno
            a.w3-btn.w3-ripple.w3-round.w3-red(href="/alunos/delete/"+aluno.id) Remover Aluno

        .w3-container.w3-margin-top
            .w3-card-4.w3-white.w3-round-large
                ul.w3-ul.w3-card.w3-white.w3-border.w3-round.w3-padding
                    li
                        b Nome:
                        | #{aluno.nome}
                    li
                        b Número:
                        | #{aluno.id}
                    li
                        b Link do GitHub:
                        a.w3-text-blue(href=aluno.github target="_blank") #{aluno.github}

        .w3-container.w3-margin-top
            h3.w3-text-teal
                b Trabalhos de Casa (TPCs)
            .w3-row-padding
                - const tpcKeys = Object.keys(aluno).filter(key => key.startsWith('tpc') && aluno[key] === "1");
                if tpcKeys.length
                    each key in tpcKeys
                        span.w3-tag.w3-green.w3-round.w3-margin #{key.toUpperCase()}
                else
                    p.w3-text-red Nenhum TPC concluído.
